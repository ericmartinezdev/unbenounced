<div>
  <span>{{ section.settings.subtitle }}</span>
  <h2>{{ section.settings.title }}</h2>
  <a href="{{ section.settings.collection.url }}">{{ section.settings.a__text }}</a>
  {% for product in section.settings.collection.products %}
    {{ product.first_available_variant | json }}
    <div>
      <img src="{{ product.featured_image | img_url }}">
    </div>
    <div>
      <h4>{{ product.title }}</h4>
      <p>Oversized</p>
      <p>Magenta Brown</p>
      <p>$9</p>
    </div>
  {% endfor %}
</div>


{% schema %}
  {
    "name": "Product Card with drawer",
    "settings": [
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title"
      },
      {
        "type": "text",
        "id": "a__text",
        "label": " Anchor Text"
      },
      {
        "type": "collection",
        "id": "collection",
        "label": "Collection"
      }
    ], 
    "presets": [
      {
        "name": "Product Card with drawer"
      }
    ]
  }
{% endschema %}